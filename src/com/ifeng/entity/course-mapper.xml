<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Course">
	<!-- 以下与实体类的中字段一致 -->
	<sql id="selectId">
		id,name,detail,category,videoUrl,imgUrl,city,tag,tid,begin,end,createdAt,changedAt
	</sql>
	<!-- 增加用户 -->
	<insert id="add" parameterType="Course">
		insert into c_course(name,detail,videoUrl,imgUrl,city,category,tag,tid,begin,end,createdAt,changedAt)
		values 
		(
		#{name},
		#{detail},
		#{videoUrl},
		#{imgUrl},
		#{city},
		#{category},
		#{tag},
		#{tid},
		#{begin},
		#{end},
		null,
		 #{changedAt}
		)
	</insert>
	
	<select id="queryByC" resultType="Course" parameterType="java.util.Map">
		select
		<include refid="selectId" />
		from c_course order by createdAt desc
		<if test="count != null and count != '' ">
		    limit #{count}
		</if> 
	</select>
	
	
</mapper>
	