<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Course">
	<!-- 以下与实体类的中字段一致 -->
	<sql id="selectId">
		id,name,detail,category,videoUrl,imgUrl,scount,city,tag,tid,begin,end,createdAt,changedAt
	</sql>
	<!-- 增加用户 -->
	<insert id="add" parameterType="Course">
		insert into c_course(name,detail,videoUrl,imgUrl,scount,city,category,tag,tid,begin,end,createdAt,changedAt,status)
		values 
		(
		#{name},
		#{detail},
		#{videoUrl},
		#{imgUrl},
		#{scount},
		#{city},
		#{category},
		#{tag},
		#{tid},
		#{begin},
		#{end},
		null,
		 #{changedAt},
		 #{status}
		)
	</insert>
	
	<select id="queryByC" resultType="Course" parameterType="java.util.Map">
		select
		<include refid="selectId" />
		from c_course order by createdAt desc
		<if test="count != null and count != '' ">
		    limit #{count}
		</if> 
	</select>
	
	<select  id="getById" resultType="Course"  parameterType="int">
	    select 
		<include refid="selectId" />
		from c_course t 
		<if test="_parameter!=null">
		    <where>
		        t.id = #{_parameter}
		    </where>
		</if>
	</select>
	
	<!-- 分页查询 -->
	<select  id="pageQuery" resultType="Course"  parameterType="java.util.Map">
	   select 
		<include refid="selectId" />
		 from c_course where id>=(select id from c_course
		 <where>
		 	1=1
		 	<if test="t.status != -1">
		 		and status = #{t.status}
		 	</if>
		 </where>
		  limit #{page.startPage},1) limit #{page.pageSize};
	</select>
	
	
</mapper>
	