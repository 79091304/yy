<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Teacher">
	<!-- 以下与实体类的中字段一致 -->
	<sql id="selectId">
		id,name,sex,age,province,city,area,address,tag,detail,createdAt,changedAt,status,imgUrl,videoUrl,category
	</sql>
	<!-- 增加用户 -->
	<insert id="add" parameterType="Teacher">
		insert into t_teacher(name,sex,age,province,city,area,address,tag,detail,imgUrl,createdAt,changedAt,status,videoUrl,category)
		values 
		(
		#{name},
		#{sex},
		#{age},
		#{province},
		#{city},
		#{area}, 
		#{address},   
		#{tag},
		#{detail},
		#{imgUrl},
		null,
		 #{changedAt},
		 #{status},
		 #{videoUrl},
		 #{category}
		)
	</insert>
	
	<select id="queryByC" resultType="Teacher" parameterType="java.util.Map">
		select
		<include refid="selectId" />
		from t_teacher order by createdAt desc
		<if test="count != null and count != '' ">
		    limit #{count}
		</if> 
	</select>
	
	
	<select id="getById" resultType="Teacher" parameterType="int">
		select
		<include refid="selectId" />
		from t_teacher t
		<if test="_parameter!=null">
		    <where>
		        t.id = #{_parameter}
		    </where>
		</if>
	</select>
	
	<!-- 分页查询 -->
	<select  id="pageQuery" resultType="Course"  parameterType="java.util.Map">
	   select 
		<include refid="selectId" />
		 from t_teacher 
		 <where>
		 	1=1
		 	<if test="t.status != -1">
		 		and status = #{t.status}
		 	</if>
		 </where>
		 
	</select>
	
</mapper>
	